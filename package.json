{
  "name": "sistema-registro-restaura",
  "version": "1.0.0",
  "main": "electron/electron-main.js",
  "scripts": {
    "start": "electron .",
    "build-front": "cd frontEnd && ng build --prod --output-path ../dist/frontEnd && cd ..",
    "pack": "electron-builder --dir",
    "dist": "npm run build-front && electron-builder",
    "dist-only": "electron-builder"
  },
  "nsis": {
  "oneClick": false,  
  "allowToChangeInstallationDirectory": true
  },
  "dependencies": {
    "@sequelize/core": "^7.0.0-alpha.46",
    "@sequelize/postgres": "^7.0.0-alpha.46",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tuapp.example",
    "productName": "sistema-registro-restaura",
    "extraResources": [
      {
        "from": "dist/frontEnd/dist/restaura-app/browser",
        "to": "dist/frontEnd/dist/restaura-app/browser"
      }
    ],
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "electron/**/*",
      "backEnd/**/*",
      "dist/frontEnd/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/icon/restaura.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron/icon/install.ico",
      "uninstallerIcon": "electron/icon/uninstall.ico",
      "installerHeaderIcon": "electron/icon/install.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "sistema-registro-restaura"
    }
  }
}
